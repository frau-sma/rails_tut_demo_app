<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th colspan="3">Actions</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><a href="mailto:<%= user.email %>"><%= user.email %></a></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Delete', user, confirm: 'Are you sure you want to delete user ' + user.name + '?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

